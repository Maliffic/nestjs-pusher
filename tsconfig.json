{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "moduleResolution": "node",
    "incremental": true,
    "lib": ["es2018", "es2019", "esnext"],
    "importHelpers": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noEmitHelpers": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
